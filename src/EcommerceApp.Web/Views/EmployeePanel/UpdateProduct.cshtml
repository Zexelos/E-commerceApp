@model EcommerceApp.Application.ViewModels.EmployeePanel.ProductVM
@{
    ViewData["Title"] = "Update Product";
}
<center>
    <h1>@ViewData["Title"]</h1>
</center>
<p>Current category</p>
<span style="float: left">
    <div>
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>@Model.Name</dd>
            <dt>Description</dt>
            <dd>@Model.Description</dd>
            <dt>Price</dt>
            <dd>@Model.UnitPrice</dd>
            <dt>Units In Stock</dt>
            <dd>@Model.UnitsInStock</dd>
            <dt>Category Name</dt>
            <dd>@Model.CategoryName</dd>
            <dt>Image</dt>
            @if (Model.ImageToDisplay == "No photo available")
            {
                <dd>@Model.ImageToDisplay</dd>
            }
            else
            {
                <dd><img src="@Model.ImageToDisplay" width="256" height="256" /></dd>
            }
        </dl>
    </div>
</span>
<center>
    <span style="float: center">
        <div class="col-md-6">
            <p>Fill in the fields to update current product</p>
            <form asp-action="UpdateProduct" enctype="multipart/form-data">
                <partial name="_ProductFormPartial" />
                <button type="submit" class="btn btn-primary">Update product</button>
            </form>
        </div>
    </span>
</center>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}