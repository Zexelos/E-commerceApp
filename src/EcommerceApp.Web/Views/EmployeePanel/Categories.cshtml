@model List<EcommerceApp.Application.ViewModels.CategoryVM>;
@{
    ViewData["Title"] = "Manage Categories";
}
<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <a class="btn btn-primary" asp-area="" asp-controller="EmployeePanel" asp-action="AddCategory">Add Category</a></br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-success" asp-area="" asp-controller="EmployeePanel" asp-action="UpdateCategory"
                        asp-route-id="@item.Id">Edit</a>

                    <a class="btn btn-danger" asp-area="" asp-controller="EmployeePanel" asp-action="DeleteCategory"
                        asp-route-id="@item.Id">Remove</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>