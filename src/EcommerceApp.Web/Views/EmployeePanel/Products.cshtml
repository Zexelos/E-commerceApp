@using EcommerceApp.Application.Interfaces
@model EcommerceApp.Application.ViewModels.EmployeePanel.ProductListVM
@inject ISearchSelectList SearchSelectList
@{
    ViewData["Title"] = "Manage Products";
}
<div class="row">
    <div class="col text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>
</div>
<div class="row py-2">
    <div class="col text-center">
        <a class="btn btn-success" asp-area="" asp-controller="EmployeePanel" asp-action="AddProduct">Add Product</a>
    </div>
</div>
<div class="row py-2">
    <div class="col text-center">
        <form method="get" asp-action="Products">
            <select asp-items="SearchSelectList.ProductSelectList" name="SelectedValue"></select>
            <input text="text" name="SearchString" />
            <select asp-items="SearchSelectList.PageSizeSelectList" name="PageSize"></select>
            <input type="submit" value="Filter" />
        </form>
    </div>
</div>
<div class="row py-2">
    <div class="col">
        <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th class="align-middle">Id</th>
                    <th class="align-middle">Name</th>
                    <th class="align-middle">Category</th>
                    <th class="align-middle">Unit Price</th>
                    <th class="align-middle">Units In Stock</th>
                    <th class="align-middle">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.UnitsInStock)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-area="" asp-controller="EmployeePanel" asp-action="UpdateProduct"
                            asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>

                            <a class="btn btn-danger" asp-area="" asp-controller="EmployeePanel" asp-action="DeleteProduct"
                            asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col">
        <partial name="_PaginationPartial" />
    </div>
</div>