@using EcommerceApp.Application.Interfaces
@model EcommerceApp.Application.ViewModels.EmployeePanel.ProductListVM
@inject ISearchSelectList SearchSelectList
@{
    ViewData["Title"] = "Manage Products";
}
<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p><a class="btn btn-success" asp-area="" asp-controller="EmployeePanel" asp-action="AddProduct">Add Product</a></p>
    <p>
    <form method="get" asp-action="Products">
        <select asp-items="SearchSelectList.ProductSelectList" name="SelectedValue"></select>
        <input text="text" name="SearchString" />
        <select asp-items="SearchSelectList.PageSizeSelectList" name="PageSize"></select>
        <input type="submit" value="Filter" />
    </form>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitsInStock)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="EmployeePanel" asp-action="UpdateProduct"
                        asp-route-id="@item.Id">Edit</a>

                        <a class="btn btn-danger" asp-area="" asp-controller="EmployeePanel" asp-action="DeleteProduct"
                        asp-route-id="@item.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_PaginationPartial" />
</div>