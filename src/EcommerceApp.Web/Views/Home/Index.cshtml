@model EcommerceApp.Application.ViewModels.Home.HomeVM
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
            <div class="card my-3 border-dark text-center">
                <img class="card-img-top" src=@item.ImageToDisplay height="256" />
                <h2>@item.Name</h2>
                <p>@Html.DisplayFor(modelItem => item.UnitPrice)</p>
                <a asp-controller="Product" asp-action="Product" asp-route-id="@item.Id" class="stretched-link"></a>
            </div>
        </div>
    }
</div>
