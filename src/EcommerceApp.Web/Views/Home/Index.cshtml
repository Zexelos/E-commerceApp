@model EcommerceApp.Application.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home Page";
}
<partial name="_CategoryDropDownListPartial" />
<div class="container">
    <table>
        @for(int i = 0; i < @Model.Products.Count / 4; i++)
        {
            <tr>
                @for (int j = 0; j < @Model.Products.Count / 2; j++)
                {
                    <td>
                        <p>@Model.Products[i + j].Name</p>
                    </td>
                }
            </tr>
        }
    </table>
</div>
