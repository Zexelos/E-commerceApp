@using EcommerceApp.Application.Interfaces
@inject IHomeService HomeService
@{
    var homeVM = await HomeService.GetHomeVMAsync();
}
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle text-dark" role="button" data-toggle="dropdown"
        id="navbarDropdown">Categories</a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        @foreach (var category in homeVM.Categories)
        {
            <a class="dropdown-item" asp-controller="Category" asp-action="Products"
            asp-route-categoryName="@category.Name">@Html.DisplayFor(x => category.Name)
            </a>
        }
    </div>
</li>