@model EcommerceApp.Application.ViewModels.Product.ProductDetailsForUserVM
@{
    ViewData["Title"] = "Product";
}
<center>
    <span style="float:left">
        <img src="@Model.ImageToDisplay" width="384" height="384" />
    </span>
    <span style="float:center">
        <div class="col-md-9">
            <div class="card md-3">
                <h2>@Model.Name</h2>
                <h4 class="text-danger">Price: @Model.UnitPrice $</h4>
                <form class="d-lg-inline">
                    <div class="form-group mx-sm-3 mb-2">
                        <label>Quantity: </label>
                        <input type="number" class="col-sm-2" value="1" min="1" name="quantity">
                        <button asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" type="submit"
                            class="btn btn-primary mb-2"><i class="fas fa-cart-plus"></i></button>
                    </div>
                </form>
                <h2><label>Product Description</label></h2>
                <p>@Model.Description</p>
            </div>
        </div>
    </span>
</center>