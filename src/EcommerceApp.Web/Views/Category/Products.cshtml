@model List<EcommerceApp.Application.ViewModels.ProductVM>
@{
    ViewData["Title"] = "Products";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <h2>@item.Name</h2>
                <dd><img src=@item.ImageToDisplay width="254" height="256" /></dd>
                <p>@item.Description</p>
                <p>@item.UnitPrice</p>
            </div>
        </div>
    }
</div>