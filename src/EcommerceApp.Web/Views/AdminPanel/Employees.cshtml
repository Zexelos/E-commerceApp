@using EcommerceApp.Application.Interfaces
@model EcommerceApp.Application.ViewModels.AdminPanel.EmployeeListVM
@inject ISearchSelectList SearchSelectList
@{
    ViewData["Title"] = "Employee Management";
}
<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p><a class="btn btn-success" asp-area="" asp-controller="AdminPanel" asp-action="AddEmployee">Add Employee</a></p>
    <p><form method="get" asp-action="Employees">
        <select asp-items="SearchSelectList.EmployeeSelectList" name="SelectedValue"></select>
        <input text="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </form></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Position</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="AdminPanel" asp-action="UpdateEmployee"
                        asp-route-id="@item.Id">Edit</a>

                    <a class="btn btn-danger" asp-area="" asp-controller="AdminPanel" asp-action="DeleteEmployee"
                        asp-route-id="@item.Id">Remove</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>