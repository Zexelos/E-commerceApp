@model EcommerceApp.Application.ViewModels.EmployeeVM
@{
    ViewData["Title"] = "Update Employee";
}
<center>
    <h1>@ViewData["Title"]</h1>
    <p>Current employee</p>
    <div>
        <dl class="dl-horizontal">
            <dt>First Name</dt>
            <dd>@Model.FirstName</dd>
            <dt>Last Name</dt>
            <dd>@Model.LastName</dd>
            <dt>Position</dt>
            <dd>@Model.Position</dd>
        </dl>
    </div>

    <p>Fill in the fields to update current employee</p>
    <div class="col-md-4">
        <form asp-action="UpdateEmployee">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="@Model.FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="@Model.LastName" />
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="@Model.Position" />
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</center>