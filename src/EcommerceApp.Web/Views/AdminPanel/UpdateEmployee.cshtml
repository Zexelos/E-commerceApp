@model EcommerceApp.Application.ViewModels.AdminPanel.EmployeeVM
@{
    ViewData["Title"] = "Update Employee";
}
<div class="row">
    <div class="col text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>
</div>
<div class="row py-2">
    <div class="col text-center">
        <div class="card rounded">
            <div class="card-header bg-dark text-white">
                <p>Current employee</p>
            </div>
            <div class="card-body bg-light">
                <dl class="dl-horizontal">
                    <dt>First Name</dt>
                    <dd>@Model.FirstName</dd>
                    <dt>Last Name</dt>
                    <dd>@Model.LastName</dd>
                    <dt>Position</dt>
                    <dd>@Model.Position</dd>
                    <dt>Email</dt>
                    <dd>@Model.Email</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-8 text-center">
        <div class="card rounded">
            <div class="card-header bg-dark text-white">
                <p>Fill in the fields to update current employee</p>
            </div>
            <div class="card-body bg-light">
                <form asp-action="UpdateEmployee">
                    <partial name="_EmployeeFormPartial" />
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}