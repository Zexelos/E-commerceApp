@model EcommerceApp.Application.ViewModels.EmployeeVM
@{
ViewData["Title"] = "Update Employee";
}
<center>
    <h1>@ViewData["Title"]</h1>
    <p>Current employee</p>
    <div>
        <dl class="dl-horizontal">
            <dt>First Name</dt>
            <dd>@Model.FirstName</dd>
            <dt>Last Name</dt>
            <dd>@Model.LastName</dd>
            <dt>Position</dt>
            <dd>@Model.Position</dd>
        </dl>
    </div>

    <p>Fill in the fields to update current employee</p>
    <div class="col-md-6">
        <form asp-action="UpdateEmployee">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="@Model.FirstName" />
                <p><span asp-validation-for="@Model.FirstName" class="text-danger"></span></p>
            </div>
            <div class="form-group"> 
                <label asp-for="LastName">Last Name</label>
                <input asp-for="@Model.LastName" />
                <p><span asp-validation-for="@Model.LastName" class="text-danger"></span></p>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="@Model.Position" />
                 <p><span asp-validation-for="@Model.Position" class="text-danger"></span></p>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" />
                <p><span asp-validation-for="@Model.Email" class="text-danger"></span></p>
            </div>
            <div class="form-group">
                <p><label asp-for="@Model.Password">Password (leave blank to keep old password)</label></p>
                <input asp-for="@Model.Password" />
                <p><span asp-validation-for="@Model.Password" class="text-danger"></span></p>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</center>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}