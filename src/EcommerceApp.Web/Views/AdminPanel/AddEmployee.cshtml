@model EcommerceApp.Application.ViewModels.EmployeeVM
@{
ViewData["Title"] = "Add Employee";
}
<center>
    <h1>@ViewData["Title"]</h1>
    <p>Fill in the fields and create a new employee</p>
    <div class="col-md-4">
        <form asp-action="AddEmployee">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="@Model.FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="@Model.LastName" />
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="@Model.Position" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password">Password (leave blank to keep old password)</label>
                <input asp-for="@Model.Password" />
            </div>
            <button type="submit" class="btn btn-primary">Add Employee</button>
        </form>
    </div>
</center>