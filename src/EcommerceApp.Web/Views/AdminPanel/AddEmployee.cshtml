@model EcommerceApp.Application.ViewModels.EmployeeVM
@{
    ViewData["Title"] = "Add Employee";
}
<center>
    <h1>@ViewData["Title"]</h1>
    <p>Fill in the fields and create a new employee</p>
    <div class="col-md-6">
        <form asp-action="AddEmployee">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="@Model.FirstName" />
                <p><span asp-validation-for="@Model.FirstName" class="text-danger"></span></p>
            </div>
            <div class="form-group"> 
                <label asp-for="LastName">Last Name</label>
                <input asp-for="@Model.LastName" />
                <p><span asp-validation-for="@Model.LastName" class="text-danger"></span></p>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="@Model.Position" />
                 <p><span asp-validation-for="@Model.Position" class="text-danger"></span></p>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" />
                <p><span asp-validation-for="@Model.Email" class="text-danger"></span></p>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" />
                <p><span asp-validation-for="@Model.Password" class="text-danger"></span></p>
            </div>
            <button type="submit" class="btn btn-primary">Add Employee</button>
        </form>
    </div>
</center>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}